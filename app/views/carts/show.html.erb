<div class="space-y-8">
  <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-500">Your bag</p>
      <h1 class="text-3xl font-semibold text-slate-900">Cart overview</h1>
    </div>
    <%= link_to "Continue shopping", products_path, class: "text-sm font-semibold text-slate-500 hover:text-slate-900" %>
  </div>

  <div class="grid gap-6 lg:grid-cols-[1.8fr_1fr]">
    <div class="space-y-4">
      <% if @cart.cart_items.any? %>
        <% @cart.cart_items.includes(:product).each do |item| %>
          <div class="flex flex-col gap-4 rounded-2xl border border-slate-200 bg-white/80 p-4 sm:flex-row sm:items-center">
            <div class="flex items-center gap-4">
              <% if item.product.image_url.present? %>
                <%= image_tag item.product.image_url, class: "h-24 w-24 rounded-2xl object-cover" %>
              <% else %>
                <div class="flex h-24 w-24 items-center justify-center rounded-2xl bg-slate-100 text-slate-400">No image</div>
              <% end %>
              <div>
                <p class="text-xs uppercase tracking-wide text-slate-400"><%= item.product.category.name %></p>
                <h2 class="text-lg font-semibold text-slate-900"><%= link_to item.product.name, product_path(item.product), class: "hover:underline" %></h2>
                <p class="text-sm text-slate-500">Unit price: <%= currency(item.unit_price_cents) %></p>
              </div>
            </div>
            <div class="ml-auto flex flex-col gap-3 sm:items-end">
              <%= form_with url: update_item_cart_path(item), method: :patch, class: "flex items-center gap-2" do %>
                <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Qty</label>
                <%= number_field_tag :quantity, item.quantity, min: 1, max: item.product.stock, class: "w-20 rounded-xl border border-slate-200 px-3 py-2 text-sm focus:border-slate-900 focus:ring-slate-900/10" %>
                <%= submit_tag "Update", class: "rounded-full border border-slate-300 px-4 py-2 text-xs font-semibold text-slate-700 hover:border-slate-900" %>
              <% end %>
              <p class="text-sm font-semibold text-slate-900">Subtotal: <%= currency(item.subtotal_cents) %></p>
              <%= button_to "Remove", remove_item_cart_path(item), method: :delete, class: "text-xs font-semibold text-rose-600 hover:text-rose-500" %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="rounded-2xl border border-dashed border-slate-200 bg-white/60 p-12 text-center text-slate-500">
          Your cart is empty. Let&apos;s find something you&apos;ll love.
        </div>
      <% end %>
    </div>

    <div class="space-y-4 rounded-3xl border border-slate-200 bg-white/90 p-6 shadow-sm">
      <h2 class="text-xl font-semibold text-slate-900">Order summary</h2>
      <div class="space-y-3 text-sm text-slate-500">
        <div class="flex items-center justify-between">
          <span>Subtotal</span>
          <span class="font-semibold text-slate-900"><%= currency(@cart.total_cents) %></span>
        </div>
        <div class="flex items-center justify-between">
          <span>Shipping</span>
          <span>Calculated at checkout</span>
        </div>
      </div>
      <div class="flex items-center justify-between border-t border-slate-200 pt-4">
        <span class="text-sm font-semibold uppercase tracking-wide text-slate-500">Total due</span>
        <span class="text-2xl font-semibold text-slate-900"><%= currency(@cart.total_cents) %></span>
      </div>

      <% if @cart.cart_items.any? %>
        <% if user_signed_in? %>
          <%= form_with url: checkout_cart_path, method: :post, class: "space-y-4" do %>
            <div>
              <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Shipping address</label>
              <%= text_area_tag "checkout[shipping_address]", current_user.full_name, rows: 3, class: "mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-sm focus:border-slate-900 focus:ring-slate-900/10" %>
            </div>
            <%= submit_tag "Checkout & pay", class: "w-full rounded-full bg-slate-900 px-6 py-3 text-sm font-semibold text-white transition hover:-translate-y-0.5" %>
          <% end %>
        <% else %>
          <div class="rounded-2xl border border-slate-200 bg-slate-50 p-4 text-sm text-slate-600">
            <p>Sign in to complete your purchase.</p>
            <div class="mt-3 flex gap-3">
              <%= link_to "Sign in", new_user_session_path, class: "flex-1 rounded-full bg-slate-900 px-4 py-2 text-center text-sm font-semibold text-white" %>
              <%= link_to "Create account", new_user_registration_path, class: "flex-1 rounded-full border border-slate-900 px-4 py-2 text-center text-sm font-semibold text-slate-900" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
