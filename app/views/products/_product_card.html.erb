<div
  class="flex h-full flex-col rounded-[32px] border border-slate-100 bg-white shadow-lg shadow-purple-100/50 transition hover:-translate-y-1 hover:shadow-2xl"
  role="button"
  tabindex="0"
  data-action="click->product-modal#open keydown->product-modal#openWithKeyboard"
  data-product-modal-name="<%= product.name %>"
  data-product-modal-description="<%= strip_tags(product.description || '') %>"
  data-product-modal-image="<%= product.image_url %>"
  data-product-modal-price="<%= currency(product.price_cents) %>"
  data-product-modal-original-price="<%= currency(product.original_price_cents) %>"
  data-product-modal-discount="<%= product.discount_percentage %>% off today"
  data-product-modal-stock="<%= product.stock %> in stock"
  data-product-modal-hero="<%= product.hero_caption %>"
  data-product-modal-badge="<%= product.showcase_badge %>"
  data-product-modal-rating="<%= product.rating_score %>"
  data-product-modal-colors="<%= product.color_swatches.join(',') %>"
  data-product-modal-url="<%= product_path(product) %>"
>
  <div class="flex items-center justify-between px-6 pt-6 text-xs font-semibold uppercase tracking-wide">
    <span class="text-violet-600"><%= product.showcase_badge %></span>
    <div class="flex items-center gap-1 text-amber-500">
      <span>â˜…</span>
      <span class="text-slate-700 normal-case"><%= product.rating_score %></span>
    </div>
  </div>

  <div class="relative mx-4 mt-4 overflow-hidden rounded-[28px] bg-gradient-to-br" style="background: linear-gradient(135deg, <%= product.accent_colors[0] %>, <%= product.accent_colors[1] %>);">
    <% if product.image_url.present? %>
      <%= image_tag product.image_url, class: "mx-auto h-56 w-full object-contain drop-shadow-2xl", alt: product.name %>
    <% else %>
      <div class="flex h-48 items-center justify-center text-slate-400">Image coming soon</div>
    <% end %>
    <span class="absolute right-4 top-4 rounded-full bg-white/90 px-3 py-1 text-xs font-bold text-rose-500"><%= product.discount_percentage %>% OFF</span>
  </div>

  <div class="flex flex-1 flex-col gap-4 px-6 pb-6 pt-4">
    <div class="text-sm text-slate-500"><%= product.hero_caption %></div>
    <div>
      <h3 class="text-xl font-semibold text-slate-900"><%= product.name %></h3>
      <p class="mt-1 text-sm text-slate-500"><%= truncate(product.description, length: 120) %></p>
    </div>

    <div class="flex items-center gap-2">
      <% product.color_swatches.each do |hex| %>
        <span class="h-5 w-5 rounded-full border border-white shadow ring-1 ring-slate-200" style="background-color:<%= hex %>"></span>
      <% end %>
      <span class="text-xs font-semibold text-slate-400">+<%= [product.stock / 10, 1].max %></span>
    </div>

    <div class="mt-auto flex items-end justify-between">
      <div>
        <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Now</p>
        <div class="flex items-baseline gap-2">
          <span class="text-2xl font-bold text-slate-900"><%= currency(product.price_cents) %></span>
          <span class="text-sm text-slate-400 line-through"><%= currency(product.original_price_cents) %></span>
        </div>
        <p class="text-xs font-semibold text-rose-500"><%= product.discount_percentage %>% off today</p>
      </div>
      <div data-action="click->product-modal#stop">
        <%= button_to "Add To Cart", add_item_cart_path,
                      method: :post,
                      params: { product_id: product.id, quantity: 1 },
                      class: "inline-flex items-center rounded-full bg-violet-600 px-6 py-2 text-sm font-semibold text-white shadow-lg shadow-violet-300/40 transition hover:bg-violet-500" %>
      </div>
    </div>
  </div>
</div>
