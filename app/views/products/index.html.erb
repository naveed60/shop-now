<div class="space-y-12" data-controller="product-modal">
  <section
    class="relative"
    data-controller="slider"
    data-slider-interval-value="6500"
    data-action="mouseenter->slider#pause mouseleave->slider#resume"
  >
    <div class="relative overflow-hidden rounded-[42px] border border-purple-100 bg-white p-1 shadow-[0_35px_120px_rgba(91,33,182,0.15)]">
      <% @hero_slides.each_with_index do |slide, index| %>
        <div class="<%= index.zero? ? "" : "hidden" %>" data-slider-target="slide">
          <div class="grid gap-10 rounded-[38px] bg-gradient-to-r <%= slide[:accent] %> px-10 py-12 text-white lg:grid-cols-2">
            <div class="space-y-5">
              <p class="inline-flex items-center rounded-full bg-white/20 px-4 py-1 text-xs font-semibold uppercase tracking-[0.3em] text-white/80">
                <%= slide[:badge] %>
              </p>
              <h1 class="text-4xl font-semibold leading-tight"><%= slide[:title] %></h1>
              <p class="text-lg text-white/80"><%= slide[:subtitle] %></p>
              <p class="text-3xl font-bold text-white">From <%= currency(@starting_price_cents) %></p>
              <div class="flex flex-wrap gap-3">
                <%= link_to slide[:cta_text], slide[:cta_link], class: "rounded-full bg-white px-6 py-3 text-sm font-semibold text-slate-900 shadow-lg shadow-white/20 transition hover:-translate-y-0.5" %>
                <%= link_to "View cart (#{current_cart.total_items})", cart_path, class: "rounded-full border border-white/40 px-6 py-3 text-sm font-semibold text-white/80 hover:text-white" %>
              </div>
            </div>
            <div class="relative">
              <div class="absolute inset-0 rounded-[32px] bg-white/10 blur-3xl"></div>
              <div class="relative flex h-full items-center justify-center">
                <%= image_tag slide[:image_url], class: "max-h-80 w-auto object-contain drop-shadow-[0_20px_60px_rgba(0,0,0,0.35)]", alt: slide[:title] %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="absolute inset-x-0 bottom-6 flex items-center justify-center gap-3">
        <% @hero_slides.each_with_index do |_slide, index| %>
          <button
            class="h-3 w-12 rounded-full bg-white/40 opacity-50 transition"
            data-action="click->slider#go"
            data-slider-index-param="<%= index %>"
            data-slider-target="indicator"
            type="button"
            aria-label="Go to slide <%= index + 1 %>"
          ></button>
        <% end %>
      </div>
    </div>
  </section>

  <section class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
    <% @categories.first(4).each do |category| %>
      <div class="rounded-3xl border border-slate-100 bg-white p-5 shadow-sm">
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-violet-500">Category</p>
        <h3 class="mt-2 text-xl font-semibold text-slate-900"><%= category.name %></h3>
        <p class="text-sm text-slate-500">Explore <%= category.products.count %> products</p>
        <%= link_to "Shop now →", products_path(category_id: category.id), class: "mt-4 inline-flex items-center gap-2 text-sm font-semibold text-violet-600" %>
      </div>
    <% end %>
  </section>

  <section class="space-y-6">
    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.2em] text-violet-500">Best sellers</p>
        <h2 class="text-3xl font-semibold text-slate-900">Immersive audio & wearable tech</h2>
      </div>
      <p class="text-sm text-slate-500">Showing <%= @products.size %> of <%= @catalog_size %> products</p>
    </div>

    <% if @products.any? %>
      <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
        <%= render partial: "product_card", collection: @products, as: :product %>
      </div>
    <% else %>
      <div class="rounded-2xl border border-dashed border-slate-200 bg-white/60 p-12 text-center text-slate-500">
        <p>No products matched your filters. Try adjusting your search.</p>
      </div>
    <% end %>
  </section>

  <div
    class="fixed inset-0 z-50 hidden items-center justify-center bg-slate-900/70 px-4 py-8"
    data-product-modal-target="modal"
    data-action="click->product-modal#close"
  >
    <div class="relative w-full max-w-3xl rounded-[32px] border border-slate-100 bg-white shadow-2xl" data-action="click->product-modal#stop">
      <button
        class="absolute right-4 top-4 inline-flex h-10 w-10 items-center justify-center rounded-full border border-slate-200 text-slate-500 hover:border-slate-300 hover:text-slate-900"
        type="button"
        data-action="click->product-modal#close"
      >
        ✕
        <span class="sr-only">Close modal</span>
      </button>
      <div class="grid gap-6 p-6 sm:grid-cols-2">
        <div class="flex flex-col items-center justify-center rounded-3xl bg-slate-50 p-6">
          <img data-product-modal-target="image" src="" alt="Product image" class="h-60 w-full object-contain" />
          <p class="mt-4 text-xs font-semibold uppercase tracking-[0.3em] text-violet-500" data-product-modal-target="badge"></p>
          <p class="text-sm text-slate-500" data-product-modal-target="hero"></p>
        </div>
        <div class="space-y-4">
          <div>
            <h3 class="text-2xl font-semibold text-slate-900" data-product-modal-target="title"></h3>
            <p class="mt-1 text-sm text-slate-500" data-product-modal-target="description"></p>
          </div>
          <div class="flex items-center gap-2 text-sm font-semibold text-amber-500">
            <span>★</span>
            <span class="text-slate-700" data-product-modal-target="rating"></span>
          </div>
          <div>
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Current offer</p>
            <div class="flex items-baseline gap-2">
              <span class="text-3xl font-bold text-slate-900" data-product-modal-target="price"></span>
              <span class="text-sm text-slate-400 line-through" data-product-modal-target="originalPrice"></span>
            </div>
            <p class="text-xs font-semibold text-rose-500" data-product-modal-target="discount"></p>
            <p class="text-xs font-semibold text-emerald-600" data-product-modal-target="stock"></p>
          </div>
          <div>
            <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Available colors</p>
            <div class="mt-2 flex flex-wrap items-center gap-2" data-product-modal-target="colors"></div>
          </div>
          <a
            href="#"
            class="inline-flex items-center justify-center rounded-full bg-violet-600 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-violet-300/40 transition hover:bg-violet-500"
            data-product-modal-target="link"
          >
            View full details
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
