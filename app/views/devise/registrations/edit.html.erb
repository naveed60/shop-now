<div class="mx-auto max-w-2xl space-y-8">
  <div class="rounded-3xl border border-slate-200 bg-white/90 p-8 shadow">
    <div class="space-y-2 text-center">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-400">Profile settings</p>
      <h2 class="text-3xl font-semibold text-slate-900">Update your account</h2>
      <p class="text-sm text-slate-500">Keep your details up to date so deliveries reach you on time.</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mt-6 space-y-5" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="grid gap-4 sm:grid-cols-2">
        <div>
          <%= f.label :first_name, class: "text-xs font-semibold uppercase tracking-wide text-slate-500" %>
          <%= f.text_field :first_name, autocomplete: "given-name", class: "mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-sm focus:border-slate-900 focus:ring-slate-900/10" %>
        </div>
        <div>
          <%= f.label :last_name, class: "text-xs font-semibold uppercase tracking-wide text-slate-500" %>
          <%= f.text_field :last_name, autocomplete: "family-name", class: "mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-sm focus:border-slate-900 focus:ring-slate-900/10" %>
        </div>
      </div>

      <div>
        <%= f.label :email, class: "text-xs font-semibold uppercase tracking-wide text-slate-500" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-sm focus:border-slate-900 focus:ring-slate-900/10" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="rounded-2xl border border-amber-200 bg-amber-50 px-4 py-3 text-sm text-amber-800">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="grid gap-4 sm:grid-cols-2">
        <div>
          <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">New password</label>
          <p class="text-[11px] text-slate-400">Leave blank to keep current password.</p>
          <%= f.password_field :password, autocomplete: "new-password", class: "mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-sm focus:border-slate-900 focus:ring-slate-900/10" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-[11px] text-slate-400"><%= @minimum_password_length %> characters minimum</p>
          <% end %>
        </div>
        <div>
          <%= f.label :password_confirmation, class: "text-xs font-semibold uppercase tracking-wide text-slate-500" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-sm focus:border-slate-900 focus:ring-slate-900/10" %>
        </div>
      </div>

      <div>
        <label class="text-xs font-semibold uppercase tracking-wide text-slate-500">Current password</label>
        <p class="text-[11px] text-slate-400">We need your current password to confirm changes.</p>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-2 w-full rounded-2xl border border-slate-200 px-4 py-3 text-sm focus:border-slate-900 focus:ring-slate-900/10" %>
      </div>

      <%= f.submit "Save changes", class: "w-full rounded-full bg-slate-900 px-4 py-3 text-sm font-semibold text-white transition hover:-translate-y-0.5" %>
    <% end %>
  </div>

  <div class="rounded-3xl border border-rose-200 bg-rose-50 p-6 text-sm text-rose-800">
    <h3 class="text-base font-semibold text-rose-900">Cancel my account</h3>
    <p class="mt-2">Need a break? You can reactivate anytime by creating a new account.</p>
    <%= button_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "mt-4 rounded-full border border-rose-700 px-4 py-2 text-sm font-semibold text-rose-700 hover:bg-white" %>
    <div class="mt-4">
      <%= link_to "Back to dashboard", root_path, class: "text-sm font-semibold text-slate-500" %>
    </div>
  </div>
</div>
