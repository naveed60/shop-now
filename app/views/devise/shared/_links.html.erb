<div class="mt-6 space-y-2 text-center text-sm text-slate-500">
  <%- if controller_name != 'sessions' %>
    <div><%= link_to "Already have an account? Log in", new_session_path(resource_name), class: "font-semibold text-slate-900" %></div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div><%= link_to "Need an account? Sign up", new_registration_path(resource_name), class: "font-semibold text-slate-900" %></div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div><%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-semibold text-slate-900" %></div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div><%= link_to "Resend confirmation instructions", new_confirmation_path(resource_name), class: "font-semibold text-slate-900" %></div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div><%= link_to "Resend unlock instructions", new_unlock_path(resource_name), class: "font-semibold text-slate-900" %></div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div><%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "inline-flex w-full items-center justify-center rounded-full border border-slate-900 px-4 py-2 font-semibold text-slate-900" %></div>
    <% end %>
  <% end %>
</div>
